    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "highcharts": "^12.4.0",
    "highcharts-react-official": "^3.2.3",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^6.9.4",
    "socket.io": "^4.7.5",
    "twilio": "^4.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
