{
  "name": "epicforge-backend",
  "version": "1.0.0",
  "description": "Backend API for EpicForge Software",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node setup.js",
    "init-db": "node scripts/initDatabase.js",
    "create-admin": "node scripts/createAdmin.js",
    "start-server": "powershell -ExecutionPolicy Bypass -File start-server.ps1",
    "stop-server": "powershell -ExecutionPolicy Bypass -File stop-server.ps1",
    "restart": "npm run stop-server && timeout /t 2 && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "ag-grid-community": "^34.3.1",
    "ag-grid-react": "^34.3.1",
