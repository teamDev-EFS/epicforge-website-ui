{
  "name": "epicforge-backend",
  "version": "1.0.0",
  "description": "Backend API for EpicForge Software",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node setup.js",
    "init-db": "node scripts/initDatabase.js",
    "start-server": "powershell -ExecutionPolicy Bypass -File start-server.ps1",
    "stop-server": "powershell -ExecutionPolicy Bypass -File stop-server.ps1",
    "restart": "npm run stop-server && timeout /t 2 && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "body-parser": "^1.20.2",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
